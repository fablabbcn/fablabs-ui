{{filter-bar name=model.title}}
<main role="main">
  <div class="container  head">
    <div class="row">
      <div class="col-md-6">
        <h1>{{ model.title }}</h1>
        <div class="disabled">
          <p>{{ model.description }}
          </p>
        </div>
        <div class="status">
          <ul class="list-inline">
            <li>
              <p><span><i class="material-icons">loop</i></span>Project Status:<em>In Progress</em></p>
            </li>
            <li>
              <p><span><i class="material-icons">event</i></span>Last Update:<em>June 28th 2016</em></p>
            </li>
          </ul>
          <ul class="list-inline">
            <li>
              <p><span><i class="material-icons">room</i></span><em><a href="index.html">Fablab BCN</a>, <a href="index.html">Fablab NY</a></em></p>
            </li>
          </ul>
          <ul class="list-inline">
            <li>
              <p><span><i class="material-icons">local_offer</i></span><em><a class="btn btn-tag" href="index.html">Tag1</a><a class="btn btn-tag" href="index.html">Tag2</a><a class="btn btn-tag" href="index.html">Tag3</a></em></p>
            </li>
          </ul>
          <ul class="list-inline">
            <li>
              <p><span><i class="material-icons">attach_file</i></span><em><a href="index.html"><img src="img/github.png">Github</a>, <a href="index.html"><img src="img/googledrive.png">Google Drive</a>, <a href="google.com">http://anotherlink.com</a></em></p>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <span class="pull-right">
          <div class="activations">
            <ul class="list-inline">
              <li class="active">
                <button type="button" class="btn btn-interaction">Like it<em><span><i class="interact material-icons">favorite</i></span>12</em></button>
             </li>
              <li>
                <button type="button" class="btn btn-interaction">Built it<em><span><i class="interact material-icons">build</i></span>12</em></button>
             </li>
              <li>
                <button type="button" class="btn btn-interaction">Remade it<em><span><i class="interact material-icons">call_split</i></span>12</em></button>
             </li>
            </ul>
          </div>
          <ul class="list-unstyled ">
            <li>
              <button type="button" class="btn btn-action"><span><i class="material-icons">comment</i></span>Join the Community</button>
            </li>
          </ul>
          <ul class="list-inline pull-right">
            <h6>Share this project:</h6>
            <li>
              <button type="button" class="btn btn-social"><em><span><img src="img/twitter.png"></span>12</em></button>
            </li>
            <li>
              <button type="button" class="btn btn-social"><em><span><img src="img/fb.png"></span>12</em></button>
             </li>
            <li>
              <button type="button" class="btn btn-social"><em><span><img src="img/g.png"></span>12</em></button>
           </li>
          </ul>
        </span>
      </div>
    </div>
    <hr>
    <article class="info">
      <div class="row">
        <div class="col-md-7">
          <h3>About</h3>
          <div class="description">
            <p>{{ model.scope }}</p>
          </div>
        </div>
        <div class="col-md-5 info">
          <span class="pull-right">
            <ul class="list-inline">
              <li>
                <button type="button" class="special" href="#steps"><h1>3</h1><p>Steps</p>
                </button>
              </li>
              <li>
                <button type="button" class="special" href="#users"><h1>178</h1><p>Users</p>
                </button>
              </li>
              <li>
                <button type="button" class="special" href="#machines"><h1>21</h1><p>Events</p>
                </button>
              </li>
            </ul>
          </span>
        </div>
      </div>
    </article>
  </div>
</main>
<article class="gallery">
  {{#each model.documents as |document| }}
    <div class="col-lg-3">
      <div class="hovereffect">
        <img class="img-responsive" src={{ document }} alt="">
        <div class="overlay">
          <a class="info" href="#"><i class="material-icons">camera</i>View Project Photos</a>
        </div>
      </div>
    </div>
  {{/each}}
</article>

{{#if model.steps}}
  {{steps-gallery steps=model.steps }}
{{/if}}

{{ users-gallery count="All" users=model.users }}

